<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height="200" Width="400" Loaded="OnLoaded" Closing="OnClosing">
    <Grid>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Margin="40,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"
                 InputScope="Number" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="TextBox2" HorizontalAlignment="Left" Margin="40,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"
                 InputScope="Digits" TextChanged="TextBox_TextChanged"/>
        <Button Content="{Binding Message}" HorizontalAlignment="Left" Margin="215,116,0,0" VerticalAlignment="Top" Width="62"
                Click="Button_Click"/>
    </Grid>
</Window>
