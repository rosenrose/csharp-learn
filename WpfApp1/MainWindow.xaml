<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <Label Content="IsEditable false" HorizontalAlignment="Left" Margin="109,78,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="109,123,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="apple"/>
            <ComboBoxItem Content="banana"/>
            <ComboBoxItem Content="grape"/>
            <ComboBoxItem Content="peach"/>
        </ComboBox>
        <Label Content="IsReadOnly false" HorizontalAlignment="Left" Margin="291,78,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="291,123,0,0" VerticalAlignment="Top" Width="120"
                  IsEditable="True" Text="hello" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="apple"/>
            <ComboBoxItem Content="banana"/>
            <ComboBoxItem Content="grape"/>
            <ComboBoxItem Content="peach"/>
        </ComboBox>
        <Label Content="IsReadOnly true" HorizontalAlignment="Left" Margin="453,78,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="453,123,0,0" VerticalAlignment="Top" Width="120"
                  IsEditable="True" IsReadOnly="True">
            <ComboBoxItem Content="apple"/>
            <ComboBoxItem Content="banana"/>
            <ComboBoxItem Content="grape"/>
            <ComboBoxItem Content="peach"/>
        </ComboBox>
        <ListBox Margin="109,217,548,141" SelectionChanged="ListBox_SelectionChanged" SelectionMode="Extended">
            <ListBoxItem Content="apple"/>
            <ListBoxItem Content="banana"/>
            <ListBoxItem Content="grape"/>
            <ListBoxItem Content="peach"/>
        </ListBox>
        <ListBox Margin="291,217,343,71" SelectionMode="Extended" SelectionChanged="ListBox_SelectionChanged_1">
            <ListBoxItem Content="apple"/>
            <ListBoxItem Content="banana"/>
            <ListBoxItem Content="grape"/>
            <ListBoxItem Content="peach"/>
        </ListBox>
    </Grid>
</Window>

