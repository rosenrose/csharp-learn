<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <Button Content="Modal" HorizontalAlignment="Left" Margin="270,160,0,0" VerticalAlignment="Top" Height="33" Width="80"
                Click="Button1_Click"/>
        <Button Content="Modeless" HorizontalAlignment="Left" Margin="376,160,0,0" VerticalAlignment="Top" Height="33" Width="80"
                Click="Button2_Click"/>
        <TextBox HorizontalAlignment="Left" Margin="270,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186"
                 Text="{Binding Message}"/>
    </Grid>
</Window>

