<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <ScrollBar HorizontalAlignment="Left" Margin="324,33,0,0" VerticalAlignment="Top" Height="146" Width="15"
                   ValueChanged="ScrollBar_ValueChanged_1" Maximum="100" SmallChange="1" LargeChange="10"/>
        <ScrollBar HorizontalAlignment="Left" Margin="117,162,0,0" VerticalAlignment="Top" Height="15" Width="187"
                   Orientation="Horizontal" ValueChanged="ScrollBar_ValueChanged" SmallChange="1" LargeChange="10" Maximum="100"/>
        <Label Content="x:" x:Name="Label1" HorizontalAlignment="Left" Margin="117,33,0,0" VerticalAlignment="Top"/>
        <Label Content="y:" x:Name="Label2" HorizontalAlignment="Left" Margin="117,64,0,0" VerticalAlignment="Top"/>
        <Slider HorizontalAlignment="Left" Margin="117,221,0,0" VerticalAlignment="Top" Width="187" Height="35"
                ValueChanged="Slider_ValueChanged" Maximum="100" LargeChange="10" SmallChange="5"/>
        <Label Content="Label" x:Name="Label3" HorizontalAlignment="Left" Margin="324,217,0,0" VerticalAlignment="Top"/>
        <xctk:DecimalUpDown Margin="117,261,496,119" Maximum="100" Minimum="0" Increment="10"
                            ValueChanged="Updown_ValueChanged"/>
        <xctk:ButtonSpinner x:Name="ButtonSpinner" Margin="324,261,279,119" Spin="ButtonSpinner_Spin" InputScope="Xml">
            <Label x:Name="label" HorizontalContentAlignment="Right" />
        </xctk:ButtonSpinner>
    </Grid>
</Window>

