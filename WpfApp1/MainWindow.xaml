<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <ListView x:Name="ListView" Margin="99,37,170,198" ItemsSource="{Binding Employees}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding FirstName}" Header="First Name" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding LastName}" Header="Last Name" Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Margin="99,271,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"
                 Text="{Binding ElementName=ListView, Path=SelectedItem.FirstName, Mode=OneWay}"/>
        <TextBox x:Name="TextBox2" HorizontalAlignment="Left" Margin="244,271,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"
                 Text="{Binding ElementName=ListView, Path=SelectedItem.LastName, Mode=OneWay}"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="99,315,0,0" VerticalAlignment="Top" Width="70"
                Click="Add_Click"/>
        <Button Content="Modify" HorizontalAlignment="Left" Margin="191,315,0,0" VerticalAlignment="Top" Width="70"
                Click="Modify_Click"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="284,315,0,0" VerticalAlignment="Top" Width="70"
                Click="Clear_Click"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="377,315,0,0" VerticalAlignment="Top" Width="70"
                Click="Delete_Click"/>
        <Button Content="Purge" HorizontalAlignment="Left" Margin="468,315,0,0" VerticalAlignment="Top" Width="70"
                Click="Purge_Click"/>
    </Grid>
</Window>

